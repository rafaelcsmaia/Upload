@model Extratistico.Models.Entidades.AutenticacaoViewModel

@{
    ViewBag.Title = "Detalhes";
    Layout = "~/Views/Shared/Master.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="../../../../Scripts/ImageCheckBox.js" type="text/javascript"></script>
 <div class = "content"> 
 <img src="../../../../Content/Images/user-64.png" alt="" class="content-img"/>    
     <h2>@Html.Label(Model.UserName)</h2>
     <p>
        Informações sobre sua conta.
    </p>
    

        <fieldset>
        <div class="editor-div">
                        <div class="editor-label-bold">
                            @Html.LabelFor(model => model.Nome) : 
                            @Model.Nome
                        </div>
                        <div class="editor-label-bold">
                            @Html.LabelFor(model => model.Email) : 
                            @Model.Email
                        </div>
          
                        <br />
                        <br />
                        <p>
                            @Html.Raw(Html.Button(HtmlHelpers.TypeActionLink.Normal, "../../../../Content/Images/ico-login-20.png", Html.ActionLink("Alterar dados", "Editar", new { username=Model.UserName})))
                            @Html.Raw(Html.Button(HtmlHelpers.TypeButton.Back, "../../../../Content/Images/voltar-20.png", "", ""))
                        </p>
                        </div>
                        <div id="perfis">
                            <div class="editor-label">
                                @Html.Label("Perfis Habilitados")
                            </div>
                            @for (int i = 0; i < Model.PerfilList.Count; i++)
                            {
                                <div class="editor-field">
                                    @Html.Raw(Html.ImageCheckBox(Model.PerfilArrayBool[i]))
                                    @Html.CheckBoxFor(model => model.PerfilArrayBool[i], new { @class = "imagecheckbox" })
                                    @Html.Label(Model.PerfilList[i].Descricao, new { @for = "PerfilArrayBool_" + @i + "_" })
                                </div>
                            }
                        </div>

        </fieldset>
</div>
