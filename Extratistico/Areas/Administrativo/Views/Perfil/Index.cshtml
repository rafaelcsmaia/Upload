@model IEnumerable<Extratistico.Models.Entidades.Perfil>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}
<script src="../../../../Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script src="../../../../Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>
<div class="content">
    <img src="../../../../Content/Images/ico-profile-64.png" alt="" class="content-img" />
    <h2>
        Perfil</h2>
    <p>
        Abaixo são listados os Perfis cadastrados no sistema.
    </p>
    @if (Model.Count() != 0)
    {  
        <table>
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Opções
                </th>
            </tr>
            @foreach (var item in Model)
            {
    
                <tr>
                    <td>
                        @Html.Encode(item.Descricao)
                    </td>
                    <td>
                        @Html.Raw(Html.Button(HtmlHelpers.TypeActionLink.Table, "../../../../Content/Images/edit-20.png", Html.ActionLink("Alterar", "Editar", "Permissao", new { arg0 = item.Codigo }, null)))
                        @Html.Raw(Html.Button(HtmlHelpers.TypeActionLink.Table, "../../../../Content/Images/delete-20.png", Ajax.ActionLink("Excluir", "Excluir", "Permissao", new { arg0 = item.Codigo }, new AjaxOptions { Confirm = "A operação irá excluir o registro. Deseja confirmar?" })))
                    </td>
                </tr>
    
            }
        </table>
    }
    else
    {
        <strong><font color="red">Não há perfis cadastrados.</font></strong>
    }
    <br />
    <br />
    @Html.Raw(Html.Button(HtmlHelpers.TypeActionLink.Table, "../../../../Content/Images/add-20.png", Html.ActionLink("Cadastrar", "Cadastrar", "Permissao")))
</div>
