@model IEnumerable<Extratistico.Models.Entidades.Funcionalidade>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}
<script src="../../../../Scripts/jquery-1.9.1.js" type="text/javascript"></script>
<script src="../../../../Scripts/jquery.unobtrusive-ajax.min.js" type="text/javascript"></script>

<div class="content">
    <img src="../../../../Content/Images/Funcionalidade.png" alt="" class="content-img" />
    <h2>
        Funcionalidades</h2>
    <p>
        Inserção de novas funcionalidades.
    </p>

    @if (Model.Count() != 0)
    {
        <table>
            <tr>
                <th>
                    Descrição
                </th>
                <th>
                    Area
                </th>
                <th>
                    Controller
                </th>
                <th>
                    Action
                </th>
            </tr>
            @foreach (var item in Model)
            {
        
                <tr>
                    <td>
                        @item.Descricao
                    </td>
                     <td>
                        @item.Area
                    </td>
                    <td>
                        @item.Controller
                    </td>                   
                    <td>
                        @item.Action
                    </td>    
                </tr>        
            }
        </table>
            <br />
            <br />
            @Html.Raw(Html.Button(HtmlHelpers.TypeActionLink.Normal, "../../../../Content/Images/add-20.png", Html.ActionLink("Atualizar", "Atualizar", "Funcionalidade")))

    }
    else
    {
        <strong><font color="red">Não há novas funcionalidades.</font></strong>
    }

</div>
